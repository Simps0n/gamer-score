- if video_game.errors.any?
  %h2
    = pluralize(video_game.errors.count, 'error')
    prohibited this video_game from being saved:
  %ul

= form_for video_game do |f|
  = f.label :title
  = f.text_field :title
  - video_game.errors.full_messages_for(:title).each do |message|
    %li
      = message

  = f.label :genre
  = f.text_field :genre
  - video_game.errors.full_messages_for(:genre).each do |message|
    %li
      = message

  = f.submit
